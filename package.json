    "migration:gen": "yarn typeorm migration:generate -n",
    "migration:run": "yarn typeorm migration:run",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npx tsc && yarn --cwd client && yarn --cwd client build"
