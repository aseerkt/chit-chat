    "ws": "^8.2.1"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "concurrently -n TSC,SERVER -c blue.bold,yellow.bold \"npx tsc -w\" \"nodemon --ignore client dist/index.js\" ",
